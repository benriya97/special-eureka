#include <stdio.h>
float average(int num1, int num2);

int main()
{
    int num1, num2;
    float avg;
    printf("Find the average of two input numbers\n");
    printf("Enter first number: ");
    scanf("%d", &num1);
    printf("Enter second number: ");
    scanf("%d", &num2);
    avg = average (num1,num2);
    printf("The average of %d and %d is: %f", num1, num2, avg);
    return 0;
}

float average(int num1, int num2)
{
    float a;
    a = (num1 + num2) / 2.0;
    return a;
}
